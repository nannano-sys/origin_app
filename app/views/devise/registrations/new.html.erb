

<%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
<%= render "devise/shared/error_messages", model: @user %>
<div class = new-registration-wrapper>
<div class = new-registration-container>
  <div class="container">
    <div class="head">
      <h2 class = new-registration-header>新規登録</h2>
    </div>
    <div class = "ew-registration-nickname-wrapper">
      <%= f.text_area :nickname, class:"new-registration-nickname", id:"nickname", placeholder:"ユーザーネーム", maxlength:"10" %>
    </div>
      <%= f.email_field :email, class:"new-registration-email", id:"email", placeholder:"Email", autofocus: true %>
      <%= f.password_field :password, autocomplete: "new-registration-password" ,placeholder:"Password"%>
      <%= f.password_field :password_confirmation, autocomplete: "new-registration-password-confirmation",placeholder:"Password_confirmation" %>
    <div class = user-prefecture-wrapper>
    <div class = user-prefecture-text-wrapper>
      <b class = "user-prefecture-text">出身</b>
    </div>
      <%= f.collection_select(:prefecture_id, Prefecture.all, :id, :name,  {}, {class: "user-prefecture"}) %>
    </div>
    <div class = "sign-up-button-wrapper" id="submit" type="submit" >
      <%= f.submit "Sign up", class: "new-registration-sign-up-btn", class: "sign-up-button" %>
    </div>
  </div>
</div>
</div>
  <%end%>