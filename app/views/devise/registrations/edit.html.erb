<h2 class = edit-text >Edit <%= resource_name.to_s.humanize %></h2>

<%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put }) do |f| %>
  <%= render "devise/shared/error_messages", resource: resource %>
  <div class="form-field">
    <%= f.label :nickname %><br />
    <%= f.text_area :nickname, class:"input-default", id:"nickname", placeholder:"例) トラベラー", maxlength:"40" %>

  <div class="field">
    <%= f.label :email %><br />
    <%= f.email_field :email, class:"input-default", autofocus: true, autocomplete: "email" %>
  </div>

  <% if devise_mapping.confirmable? && resource.pending_reconfirmation? %>
    <div>Currently waiting confirmation for: <%= resource.unconfirmed_email %></div>
  <% end %>


  <div class="field">
    <%= f.label :current_password %> <i>(we need your current password to confirm your changes)</i><br />
    <%= f.password_field :current_password, class:"input-default",  autocomplete: "current-password" %>
  </div>

  <div class="field">
    <%= f.label :age %><br />
    <%= f.text_field :age, class:"input-default", placeholder:"年齢を共有しましょう！" %>
  </div>

  <div class="field">
    <%= f.label :hoby %><br />
    <%= f.text_field :hoby, class:"input-default", placeholder:"趣味を共有しましょう！" %>
  </div>

  <div class="field">
    <%= f.label :want_to_go %><br />
    <%= f.text_field :want, class:"input-default", placeholder:"行きたいところは？仲間が見つかるかも！" %>
  </div>

  <div class="field">
    <%= f.label :profile %><br />
    <%= f.text_field :profile, class:"input-default", placeholder:"あなたのことをみんなに知ってもらいましょう！" %>
  </div>
  

  <div class="actions">
    <%= f.submit "Update", calss: "sub_btn" %>
  </div>
<% end %>

<h3>Cancel my account</h3>

<p>Unhappy? <%= button_to "Cancel my account", registration_path(resource_name), data: { confirm: "Are you sure?" }, method: :delete %></p>
