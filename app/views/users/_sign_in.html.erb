<% if user_signed_in?%>
   <% if current_user.avatar.attached?%>
  　<b class = header-user-avatar-wrapper><%= image_tag current_user.avatar.variant(resize: "70x70"), class: "header-user-avatar"%></b>
   <%else%>
    <b class = header-user-avatar-wrapper><%= image_tag "no-image.png", class: "header-user-avatar"%></b>
   <% end %>
  <div class = header-user-menu-wrapper>
  <b class = header-user-name>
  　<b class = hello-user-name><%= "こんにちは#{current_user.nickname}さん"%></b>
  </b>

  <%if current_page?(user_path(current_user))%>
    <%= link_to 'トップページ', root_path, class: "mypage" %>
    <%= link_to 'ログアウト',destroy_user_session_path , method: :delete, class: "logout" %>
  <% else %>
    <%= link_to 'マイページ', user_path(current_user), class: "mypage" %>
    <%= link_to 'ログアウト',destroy_user_session_path , method: :delete, class: "logout" %>
  <% end %>
<% else %>
  <%= link_to '新規登録', new_user_registration_path, class: "new_registration"%>
  <%= link_to 'ログイン', new_user_session_path, class: "login"  %>
<% end %> 
</div>
