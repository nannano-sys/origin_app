<% if user_signed_in?%>
  <div class = header-user-menu-wrapper>
  <b class = header-user-name>
  　<b class = hello-user-name><%= "こんにちは#{current_user.nickname}さん"%></b>
  </b>

  <%if current_page?(user_path(current_user))%>
    <%= link_to 'トップページ', root_path, class: "mypage" %>
    <%= link_to 'ログアウト',destroy_user_session_path , method: :delete, class: "logout" %>
  <% else %>
    <%= link_to 'マイページ', user_path(current_user), class: "mypage" %>
    <%= link_to 'ログアウト',destroy_user_session_path , method: :delete, class: "logout" %>
  <% end %>
<% else %>
  <%= link_to '新規登録', new_user_registration_path, class: "new_registration"%>
  <%= link_to 'ログイン', new_user_session_path, class: "login"  %>
<% end %> 
</div>
