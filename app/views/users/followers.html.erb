
<%=@user.nickname%><b>のフォロワー</b>



<% @users.each do |user| %>
    <div class = "user_wrapper">
    <div class = "follower-user-name-info">ユーザ名：<%= link_to user.nickname, user_path(user), class: "user-name"%></div>
<div class = follow-user-prof-wrapper>
 <div class = "user-avatar">
  <% if user.avatar.attached?%>
    <%= image_tag user.avatar.variant(resize: '180x180'), class: 'user-avatar-image'%>
  <%else%>
    <%= image_tag "no-image.png", class: "no-avatar-image"%>
  <%end%>
 </div>
    
     <%# ユーザーネームの部分を部分テンプとして切り出すことで、CSSの重複を避けることができると考える。%>

<div class = "user-prof">      
    <ul class = "users_list">
        <li class = "profile">プロフィール</li>
        <div class = "list-content">
        <li>出身 : <%= user.prefecture.name%></li>
    <%if user.age.present?%>
        <li>年齢：<%= user.age%></li>
    <%end%>
    <% if user.hoby.present? %>
        <li>趣味：<%= user.hoby%></li>
    <%end%>
    <% if user.want.present? %>
        <li>行きたい場所：<%= user.want%></li>
    <%end%>
    <%if user.profile.present?%>
        <li class = plof><%= user.profile%></li>
    <%end%>
    </div>
    </ul>
</div>
</div>
<%end%>